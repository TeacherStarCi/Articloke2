<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Listener.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>Controllers.Authentication.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>Controllers.Authentication.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoogleSignInServlet</servlet-name>
        <servlet-class>Controllers.Authenication.GoogleSignIn.GoogleSignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePDFServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.CreatePDFServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePaperServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.CreatePaperServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReviewPaperShowServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.ReviewPaperShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReviewCoreServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.ReviewCoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DebateCoreServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.DebateCoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DebatePaperShowServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.DebatePaperShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublishCoreServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.PublishCoreServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublishPaperShowServlet</servlet-name>
        <servlet-class>Controllers.CreatePaper.PublishPaperShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/SignInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoogleSignInServlet</servlet-name>
        <url-pattern>/GoogleSignInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePDFServlet</servlet-name>
        <url-pattern>/CreatePDFServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePaperServlet</servlet-name>
        <url-pattern>/CreatePaperServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReviewPaperShowServlet</servlet-name>
        <url-pattern>/ReviewPaperShowServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReviewCoreServlet</servlet-name>
        <url-pattern>/ReviewCoreServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DebateCoreServlet</servlet-name>
        <url-pattern>/DebateCoreServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DebatePaperShowServlet</servlet-name>
        <url-pattern>/DebatePaperShowServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublishCoreServlet</servlet-name>
        <url-pattern>/PublishCoreServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublishPaperShowServlet</servlet-name>
        <url-pattern>/PublishPaperShowServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            Home.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
