<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GoogleSignInServlet</servlet-name>
        <servlet-class>Controllers.Authenication.GoogleSignIn.GoogleSignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>Controllers.Authenication.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>Controllers.Authenication.SignUp.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticleShowServlet</servlet-name>
        <servlet-class>Controllers.Article.ArticleShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ArticleViewServlet</servlet-name>
        <servlet-class>Controllers.Article.ArticleViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePageServlet</servlet-name>
        <servlet-class>Controllers.Article.ChangePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditShowServlet</servlet-name>
        <servlet-class>Controllers.Profile.EditShowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPropertiesServlet</servlet-name>
        <servlet-class>Controllers.Profile.EditPropertiesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoogleSignInServlet</servlet-name>
        <url-pattern>/GoogleSignInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/SignInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticleShowServlet</servlet-name>
        <url-pattern>/ArticleShowServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticleViewServlet</servlet-name>
        <url-pattern>/ArticleViewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePageServlet</servlet-name>
        <url-pattern>/ChangePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditShowServlet</servlet-name>
        <url-pattern>/EditShowServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPropertiesServlet</servlet-name>
        <url-pattern>/EditPropertiesServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file> Home.jsp </welcome-file>
    </welcome-file-list>
</web-app>
